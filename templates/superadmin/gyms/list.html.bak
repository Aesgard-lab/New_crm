{% extends 'superadmin/base.html' %}

{% block header %}Gimnasios{% endblock %}

{% block content %}
<div class="glass-panel rounded-xl">
    <div class="p-6 border-b border-gray-800 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <!-- Search & Filters -->
        <form method="get" class="flex-1 flex gap-4">
            <div class="relative flex-1 max-w-md">
                <input type="text" name="search" value="{{ search }}"
                    placeholder="Buscar por nombre, comercial o email..."
                    class="w-full bg-gray-900 border border-gray-700 text-gray-300 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block pl-10 p-2.5">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
            </div>
            <select name="status" onchange="this.form.submit()"
                class="bg-gray-900 border border-gray-700 text-gray-300 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block p-2.5">
                <option value="">Todos los Estados</option>
                {% for status_val, status_label in status_choices %}
                <option value="{{ status_val }}" {% if status_filter==status_val %}selected{% endif %}>{{ status_label
                    }}</option>
                {% endfor %}
            </select>
            <select name="plan" onchange="this.form.submit()"
                class="bg-gray-900 border border-gray-700 text-gray-300 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block p-2.5">
                <option value="">Todos los Planes</option>
                {% for plan in plans %}
                <option value="{{ plan.id }}" {% if plan_filter|add:"0"==plan.id %}selected{% endif %}>{{ plan.name }}
                </option>
                {% endfor %}
            </select>
        </form>

        <!-- Actions -->
        <div>
            <!-- Future: Add Create Gym button here -->
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="text-gray-400 text-xs uppercase bg-gray-900/50">
                    <th class="px-6 py-3">Gimnasio</th>
                    <th class="px-6 py-3">Ubicación</th>
                    <th class="px-6 py-3">Plan Actual</th>
                    <th class="px-6 py-3">Estado</th>
                    <th class="px-6 py-3">Próx. Renovación</th>
                    <th class="px-6 py-3">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-800">
                {% for gym in gyms %}
                <tr class="text-sm hover:bg-white/5 group">
                    <td class="px-6 py-4">
                        <div class="items-center">
                            <div class="font-medium text-white">{{ gym.name }}</div>
                            <div class="text-gray-500 text-xs">{{ gym.email }}</div>
                            {% if gym.franchise %}
                            <div class="text-indigo-400 text-xs mt-1">{{ gym.franchise.name }}</div>
                            {% endif %}
                        </div>
                    </td>
                    <td class="px-6 py-4 text-gray-400">
                        {{ gym.city }}<br>
                        <span class="text-xs text-gray-600">{{ gym.country }}</span>
                    </td>
                    <td class="px-6 py-4">
                        {% if gym.subscription %}
                        <span
                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            {{ gym.subscription.plan.name }}
                        </span>
                        {% else %}
                        <span class="text-gray-500 text-xs">Sin Plan</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {% if gym.subscription %}
                        {% if gym.subscription.status == 'ACTIVE' %}
                        <span
                            class="px-2 py-1 text-xs rounded-full bg-green-500/10 text-green-400 border border-green-500/20">Activo</span>
                        {% elif gym.subscription.status == 'PAST_DUE' %}
                        <span
                            class="px-2 py-1 text-xs rounded-full bg-red-500/10 text-red-400 border border-red-500/20">Pago
                            Pendiente</span>
                        {% else %}
                        <span
                            class="px-2 py-1 text-xs rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">{{
                            gym.subscription.get_status_display }}</span>
                        {% endif %}
                        {% else %}
                        <span
                            class="px-2 py-1 text-xs rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Inactive</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-gray-400">
                        {{ gym.subscription.current_period_end|date:"d M Y"|default:"-" }}
                    </td>
                    <td class="px-6 py-4 text-right">
                        <a href="{% url 'superadmin:gym_detail' gym.id %}"
                            class="font-medium text-indigo-400 hover:text-indigo-300">Detalles</a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                        No se encontraron gimnasios con los filtros seleccionados.
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}