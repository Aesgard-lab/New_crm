# =================================================
# EJEMPLO DE ARCHIVO .env PARA EL CRM
# =================================================
# Copia este archivo como .env y configura los valores
# NUNCA subas el archivo .env a git

# =================================================
# ENTORNO
# =================================================
# Opciones: local, staging, production
DJANGO_ENV=local

# =================================================
# DJANGO CORE
# =================================================
# Genera una clave secreta única para producción con:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION

# Solo True en desarrollo local
DJANGO_DEBUG=True

# Hosts permitidos (separados por coma)
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Orígenes CSRF confiables (para Django 4.0+)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# =================================================
# BASE DE DATOS (PostgreSQL)
# =================================================
POSTGRES_DB=new_gym
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_seguro
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# =================================================
# REDIS (Cache y Celery)
# =================================================
# Formato: redis://[:password]@host:port/db
REDIS_URL=redis://localhost:6379/1

# Celery broker (normalmente otra DB de Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# =================================================
# EMAIL (SMTP)
# =================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password
DEFAULT_FROM_EMAIL=Tu CRM <noreply@tudominio.com>

# =================================================
# STRIPE (Pagos)
# =================================================
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Precios de Stripe para planes SaaS
STRIPE_PRICE_BASIC=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# =================================================
# REDSYS (Pasarela de pago española - Opcional)
# =================================================
REDSYS_MERCHANT_CODE=999008881
REDSYS_TERMINAL=1
REDSYS_SECRET_KEY=sq7HjrUOBfKmC576ILgskD5srU870gJ7
REDSYS_ENVIRONMENT=TEST

# =================================================
# AWS S3 (Opcional - para archivos en la nube)
# =================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-west-1
AWS_S3_CUSTOM_DOMAIN=

# =================================================
# SENTRY (Monitoreo de errores)
# =================================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
RELEASE_VERSION=1.0.0

# =================================================
# INTERNACIONALIZACIÓN
# =================================================
LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# =================================================
# CORS (para APIs)
# =================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =================================================
# SEGURIDAD (Solo producción con HTTPS)
# =================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# =================================================
# ADMINISTRADORES (para notificaciones de errores)
# =================================================
# Formato: nombre:email,nombre2:email2
DJANGO_ADMINS=Admin:admin@tudominio.com

# =================================================
# DESARROLLO
# =================================================
# Usar SQLite en lugar de PostgreSQL (solo desarrollo)
USE_SQLITE=False

# =================================================
# LOGGING
# =================================================
DJANGO_LOG_LEVEL=INFO
