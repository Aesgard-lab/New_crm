# ============================================
# DJANGO SECURITY SETTINGS
# ============================================

# CRÍTICO: Generar una clave segura para producción
# Puedes generarla con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG: Siempre False en producción
DJANGO_DEBUG=True

# ALLOWED_HOSTS: Dominios permitidos (separados por comas)
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================

POSTGRES_DB=new_gym
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# ============================================
# CELERY & REDIS
# ============================================

CELERY_BROKER_URL=redis://localhost:6379/0

# ============================================
# LOCALIZATION
# ============================================

LANGUAGE_CODE=es-es
TIME_ZONE=Europe/Madrid

# ============================================
# STRIPE (Payment Gateway)
# ============================================

STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# REDSYS (Spanish Payment Gateway)
# ============================================

REDSYS_MERCHANT_CODE=999008881
REDSYS_TERMINAL=1
REDSYS_SECRET_KEY=sq7HjrUOBfKmC576ILgskD5srU870gJ7
